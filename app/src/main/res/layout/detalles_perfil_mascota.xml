<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relative_shit"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imagen_perro"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/perro"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:contentDescription="@string/imagen_del_perro"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/imagen_perro"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:id="@+id/textView_Raiting"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="0"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:src="@drawable/hueso_amarillo"
                android:layout_height="35dp"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
