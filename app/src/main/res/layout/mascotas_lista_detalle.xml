<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_marginTop="20dp"
    android:layout_gravity="center|top"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imagen_perro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/perro"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:contentDescription="@string/imagen_del_perro"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/imagen_perro"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:id="@+id/hueso_raiting"
                android:src="@drawable/hueso_blanco"
                android:layout_height="30dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:id="@+id/textView_NombreMascota"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:id="@+id/textView_Raiting"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="0"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:src="@drawable/hueso_amarillo"
                android:layout_height="35dp"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

